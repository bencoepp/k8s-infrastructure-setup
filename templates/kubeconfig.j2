apiVersion: v1
kind: Config

clusters:
- name: lb-cluster
  cluster:
    server: "https://{{ kube_apiserver_lb_url }}"
    certificate-authority-data: "{{ ca_cert_b64 }}"

contexts:
- name: lb-context
  context:
    cluster: lb-cluster
    user: "{{ kube_user_name }}"

current-context: lb-context

users:
- name: "{{ kube_user_name }}"
  user:
    client-certificate-data: "{{ user_cert_b64 }}"
    client-key-data: "{{ user_key_b64 }}"